<% content_for :form_block do %>
<div class="mb-4 text-center text-white">
  <h2 class="mb-1"><%= t('.sign_up') %></h2>
    <%= t(".login_html", link: link_to("log in to your account", new_session_path(resource_name), class: "font-semibold")) %>
</div>


<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<div class="form-group">
  <%= f.label :first_name, "PrÃ©nom" %>
  <%= f.text_field :first_name, autocomplete: "PrÃ©nom", placeholder: true, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :last_name, "Nom" %>
  <%= f.text_field :last_name, autocomplete: "Nom", placeholder: true, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true,placeholder: true, autocomplete: "steeve@jobs.com",class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :password %>
  <%= f.password_field :password, autocomplete: "new-password",placeholder: true, class:"form-control" %>
  <% if @minimum_password_length %>
  <p class="mt-3 text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</p>
  <% end %><br />
</div>
<div class="form-group">
  <%= f.label :language %>
  <%= f.select :language, User.language_list %>
</div>

<div class="form-group">
  <%= f.submit t('.sign_up'), class:"btn btn-primary btn-expanded", data: { disable_with: t(".submitting") } %>
</div>
<% end %>

<%= render "devise/shared/links" %>
<% end %>

<%= render "devise/shared/form_block" %>
