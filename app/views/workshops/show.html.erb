<!-- This example requires Tailwind CSS v2.0+ -->
<div class="h-screen flex overflow-hidden linear-background">
  <div class="flex flex-col min-w-0 flex-1 overflow-hidden">

    <div class="flex-1 relative z-0 flex overflow-hidden">
      <main class="flex-1 relative z-0 overflow-y-auto focus:outline-none">
        <!-- Start main area-->
        <div class="absolute inset-0 py-6 px-4 sm:px-6 lg:px-8">
          <div class="h-full bg-white p-8 shadow rounded-lg">
            <p class="font-normal text-lg text-clover-400">
              <%= l(@workshop.start_date, format: '%d %B %Y' ) %>
            </p>
            <h1 class="h3 mt-4 text-clover-800">
              <%= @workshop.name %>
            </h1>
            <div class="mt-4 flex items-center">
              <div class="flex-shrink-0">
                <a href="#">
                    <% if @workshop.user.avatar.attached? %>
                      <%= cl_image_tag @workshop.user.avatar.key, class: "rounded-full h-10 w-10" %>
                    <% else %>
                      <img src="https://eu.ui-avatars.com/api/?rounded=true&name=<%= @workshop.user.first_name  + @workshop.user.last_name%>" class="rounded-full h-10 w-10">
                    <% end %>
                </a>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">
                  <a href="#" class="hover:underline">
                    <%= @workshop.user.full_name %>
                  </a>
                </p>
                <div class="flex space-x-1 text-sm text-gray-500">
                  <p>
                    Cofounder
                  </p>
                  <span aria-hidden="true">
                    &middot;
                  </span>
                  <span>
                    UX/UI Designer
                  </span>
                </div>
              </div>
            </div>
            <div class="mt-8 flex-shrink-0">
              <img class="h-48 w-full object-cover" src="<%= @workshop.image_url%>" alt="">
            </div>
            <p class="mt-8 text-base text-gray-500">
              <%= @workshop.body %>
            </p>
          
          </div>
        </div>
        <!-- End main area -->
      </main>
      <aside class="relative xl:flex xl:flex-col flex-shrink-0 w-96">
        <!-- Start secondary column (hidden on smaller screens) -->
        <div class="absolute inset-0 py-6 px-4 sm:px-6 lg:px-8">
          <div class="h-full text-center rounded-xl  shadow bg-white">
            <div class="flex  pt-12 items-center justify-center w-full">
              <%= render_svg "icons/time", styles:"h-6 w-6" %>
              <p class="font-normal ml-4 text-lg ">
                <%= l(@workshop.start_date, format: '%d %B %Y %T' ) %>
              </p>
            </div>
            <div class="flex  pt-12 items-center justify-center w-full">
              <%= render_svg "icons/home", styles:"h-6 w-6" %>
              <p class="font-normal text-sm ">
                <%= @workshop.address %>
              </p>
            </div>
            <div class="text-center mt-12">
              <span class="px-3  py-0.5 rounded-full text-sm font-medium bg-pink-100 text-pink-800">
                <%= @workshop.duration % 7 == 0 ? "1 journée" : "1/2 journée" %>
              </span>
            </div>
          </div>
        </div>
        <!-- End secondary column -->
      </aside>
    </div>
  </div>
</div>




