<% locales = { 
  #path: "pages.landing_workshops",
  colors: {
    logo_color: "white",
    # primary_background: "goldish-300",
    # secondary_background: "white",
    # primary: "roman",
    # text: "clover-600",
    # title: "clover-700",
    # primary_button: "btn btn-primary",
    # hero_text: "hippie-500"
  },
  #hero_right_content: "entrepreneur_video"
} %>



<header class="bg-cover h-72 bg-center" style="background-image:linear-gradient(180deg, rgba(3, 10, 3, 0.64) -6.12%, rgba(3, 10, 3, 0) 122.24%), url('<%= @workshop.image_url %>');">
  <div class="w-full ">
    <%= render "shared/navbar", locales: locales %>
  </div>
</header>


<main class="flex flex-col items-center">
  <div class="mx-4 lg:mx-8 " style="min-width:75%">
    <div class="grid-cols-5 mx-auto bg-red-500 grid w-5/6">
      <div class=" flex flex-col py-24 col-span-2" style="">
        <div class="flex items-center justify-start">
          <%= render_svg "icons/calendar", styles:"h-4 w-4" %>
          <p class="font-semibold ml-4"><%= l(@workshop.start_date, format: '%d %B %Y - %Hh%M' ) %></p>
        </div>
        <div class="flex mt-4 items-center justify-start">
          <%= render_svg "icons/location", styles:"h-4 w-4" %>
          <p class="font-semibold ml-4"><%= @workshop.address %></p>
        </div>
        <div class="flex mt-4 items-center justify-start">
          <%= render_svg "icons/clock", styles:"h-4 w-4" %>
          <p class="font-semibold ml-4"><%= @workshop.duration % 7 == 0 ? "1 journée" : "1/2 journée" %></p>
        </div>
        
        <div class="mt-24">
          <p class="text-lg font-semibold ">Places disponibles: <%= @workshop.capacity - @workshop.users.size %></p class="text-lg ">
          <p class="mt-2">Amet minim mollit non deserunt ullamco est sit aliqua dolor do amet sint. Velit officia consequat duis enim velit mollit.</p>
        </div>
      </div>
      <div class="bg-white px-16 py-12 rounded-xl shadow col-span-3 -mt-32" >
        <h1 class="h3 mt-2 text-clover-900">
          <%= @workshop.name %>
        </h1>
        <p class="mt-1">Avec<span class="font-medium"> <%= @workshop.user.full_name %></span></p>

        <hr class="w-full my-8 mx-auto">

        <h3 class="mt-2 ">Au programme</h3>
        <p class="text-base mt-4  text-gray-500">
          <%= @workshop.body %>
        </p>
        <h3 class="mt-8">À la fin vous repartez avec:</h3>
        <p class="text-base mt-4 text-gray-500">
          <%= @workshop.value_added %>
        </p>
        <div class="mt-8">
        <% if current_user && current_user.workshop_bookings.where(workshop: @workshop).present? %>
          <p class="font-semibold text-roman-500">Vous êtes inscrit</p>
        <% else %>
          <%= link_to "Postulez", workshop_workshop_bookings_path(@workshop), method: :post, class: "btn btn-primary btn-expanded" %>
        <% end %>
        </div>
      </div>

    </div>

    <section class="mt-12">
      <hr class="bg-clover-800 w-5/6 mx-auto">
      <h3 class="mt-6 text-center">Découvrez nos autres ateliers</h3>
      <div class="pt-16 pb-32 grid grid-cols-2 gap-8 w-4/6 mx-auto">
        <% @workshops.each do |workshop| %>
          <div class="flex flex-col rounded-lg shadow overflow-hidden">
            <div class="flex-shrink-0">
              <div class="relative h-48 w-full bg-center bg-cover" style="background-image: url('<%= workshop.image_url %>');">
                <div class="absolute left-1/2" style="top:11.25rem;">
                  <span class="relative -left-1/2 px-3 py-0.5 rounded-full text-sm font-medium bg-roman-500 text-white">
                    <%= workshop.duration % 7 == 0 ? "1 journée" : "1/2 journée" %>
                  </span>
                </div>
              </div>
            </div>
            <div class="flex-1 bg-white px-6 py-10 flex flex-col justify-between">
              <div class="flex-1">
                <%= link_to workshop_path(workshop), class:"block mt-2"  do %>
                  <p class="text-xl font-semibold text-gray-900">
                    <%= workshop.name %>
                  </p>
                  <p class="mt-3 text-base text-gray-500">
                    <%= workshop.value_added %>
                  </p>
                <% end %>
              </div>
              <div class="mt-6 flex justify-center w-full items-center">
                <div class="">
                  <%= link_to "En savoir plus", workshop_path(workshop), class:"btn btn-primary outlined" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>

  </div>
</main>
































