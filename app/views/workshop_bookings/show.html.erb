<% locales = { 
  #path: "pages.landing_workshops",
  colors: {
    logo_color: "white",
    # primary_background: "goldish-300",
    # secondary_background: "white",
    # primary: "roman",
    # text: "clover-600",
    # title: "clover-700",
    # primary_button: "btn btn-primary",
    # hero_text: "hippie-500"
  },
  #hero_right_content: "entrepreneur_video"
} %>

<div class="h-screen">
  <section class="relative mx-auto bg-cover w-full h-1/3 bg-center" style="background-image:linear-gradient(180deg, rgba(3, 10, 3, 0.64) -6.12%, rgba(3, 10, 3, 0) 122.24%), url('<%= @workshop_booking.workshop.image_url %>');">
    <div class="w-full ">
      <%= render "shared/navbar", locales: locales %>
    </div>
    <div class="bg-white w-2/3 mx-auto mt-24 md:w-1/4 md:absolute -bottom-1/3 left-1/4 px-8 py-6 rounded shadow">
      <div class="flex flex-col items-start justify-start">
        <h1 class="h3 mt-2 text-clover-900">
          <%= current_user.full_name %>
        </h1>
        <div class="flex mt-4 items-center justify-start">
          <%= render_svg "icons/mail", styles:"h-4 w-4" %>
          <p class="font-semibold ml-4"><%= current_user.email %></p>
        </div>
        <div class="flex mt-4 items-center justify-start">
          <%= render_svg "icons/phone", styles:"h-4 w-4" %>
          <p class="font-semibold ml-4"><%= current_user.phone_number %></p>
        </div>    
      </div>
    </div>
  </section>







