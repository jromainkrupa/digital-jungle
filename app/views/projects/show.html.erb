<%= link_to projects_path, class:"btn btn-secondary outline" do %>
  <i class="fas fa-arrow-left"></i>
  <p class="ml-1">Back</p>
<% end %>

<div class="py-8">
  <div class="rounded flex flex-col max-w-4xl mx-auto items-center justify-center bg-gray-900">
    <% if @project.publishable_pitch %>
      <% if @project.publishable_pitch.video.key %>
        <%= cl_video_tag(@project.publishable_pitch.video.key, :loop => true, :controls => true,
          :transformation => [
            :crop=>"pad", :background => "#F3F4F6",
            :quality=>70]) %>
      <% end %>
    <% end %>

    <%= render "shared/top-level-buttons", project: @project %>

    <div class=" mt-2">
      <h2 class="h3 text-gray-100"><%= @project.name %></h2>
      <p class="text-gray-300 mt-2"><%= @project.description %></p>
    </div>

    <div class="bg-gray-50 my-8 pr-4 sm:pr-6 lg:pr-8 lg:flex-shrink-0 lg:border-l lg:border-gray-200 xl:pr-0">
      <div class="px-6">
        <div class="pt-6 pb-2">
          <h2 class="text-sm font-semibold">Activity</h2>
        </div>
        <div>
          <ul class="divide-y divide-gray-200">
          <% @project_messages.each do |message| %>
            <li class="py-4">
              <div class="flex space-x-3">
                <img class="h-6 w-6 rounded-full" src="https://images.unsplash.com/photo-1517365830460-955ce3ccd263?ixlib=rb-1.2.1&ixqx=tM4wN2sJYF&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=256&h=256&q=80" alt="">
                <div class="flex-1 space-y-1">
                  <div class="flex items-center justify-between">
                    <h3 class="text-sm font-medium"><%= message.username %></h3>
                    <p class="text-sm text-gray-500">1h</p>
                  </div>
                  <p class="text-sm text-gray-500"><%= message.body %></p>
                </div>
              </div>
            </li>
          <% end %>
          </ul>
          <div class="py-4 text-sm border-t border-gray-200">
            <a href="#" class="text-indigo-600 font-semibold hover:text-indigo-900">View all activity <span aria-hidden="true">&rarr;</span></a>
          </div>
        </div>
      </div>
    </div>

    <% if current_user != @project.user %>
      <div class="mt-10 mb-8 w-3/12">
        <%= link_to "Investir dans #{@project.name}", new_project_investment_path(@project), class:"btn btn-primary btn-expanded" %>
      </div>
    <% end %>
  </div>
</div>




