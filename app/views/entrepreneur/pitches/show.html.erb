<div class="container mx-auto my-8 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="h3 text-gray-400">
        <%= link_to "Pitches", entrepreneur_project_pitches_path %> ><span
          class="text-aquamarine-500"
        >
          Pitch #<%= @pitch.id %></span
        >
      </h1>
      <%= link_to t("edit"), edit_entrepreneur_project_pitch_path, class: "btn btn-link"
      %>
    </div>

    <div class="bg-gray-800 rounded shadow p-8">
      <div class="mb-4">
