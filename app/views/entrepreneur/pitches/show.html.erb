      </div>
      <div class="mb-4">
        <h5 class="text-gray-400">video</h5>
        <div>
          <% if @pitch.video.key %>
            <%= cl_video_tag(@pitch.video.key, :loop => true, :controls => true,
          :transformation => [
            :height=>600, :width=>360, :crop=>"pad",
            :quality=>70, :duration=>"10"])  %>

          <% else %>
            <%= link_to "upload une video", edit_entrepreneur_project_pitch_path, class: "btn btn-link"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
