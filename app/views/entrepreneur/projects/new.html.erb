<div class="container mx-auto my-8 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="h3 text-gray-900">Cr√©er votre projet</h1>
    </div>

    <div class="bg-gray-800 rounded shadow p-8">
      <%= form_with(model: @project, url: entrepreneur_projects_path) do |form| %>
        <%= render "shared/error_messages", resource: form.object %>
        <div class="form-group">
          <%= form.label "nom" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group flex justify-between">
          <%= form.button class: "btn btn-primary" %>

          <% if form.object.persisted? %>
          <%= link_to "supprimer", entrepeneur_project_path(@project), class: "btn btn-danger outline", method: :delete, data: { confirm: t("are_you_sure") } %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>