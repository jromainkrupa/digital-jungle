<div class="">
  <div class="rounded-xl shadow overflow-hidden	flex flex-col max-w-2xl mx-auto items-center justify-center bg-white">
    <% if project.publishable_pitch %>
      <% if project.publishable_pitch.video.key %>
        <%= cl_video_tag(project.publishable_pitch.video.key, :loop => true, :controls => true,
          :transformation => [
            :crop=>"pad", :background => "#F3F4F6",
            :quality=>70]) %>
      <% end %>
    <% end %>

    <%= render "shared/top-level-buttons", project: project %>

    <div class="max-w-xl mt-2">
      <h2 class="h3 text-clover-700"><%= project.name.capitalize %></h2>
      <p class="text-gray-600 mt-2"><%= project.description %></p>
    </div>
    <div class="mt-10 mb-8 w-5/12">
      <%= link_to_if current_user.nil?, "Login to see more", new_user_session_path, class:"btn btn-primary btn-expanded" do %>
        <%= link_to "see more", project_path(project), class:"btn btn-primary btn-expanded" %>
      <% end %>
    </div>
  </div>
</div>
