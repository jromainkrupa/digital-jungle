<% locales = { 
  path: "pages.landing_workshops",
  colors: {
    primary_background: "goldish-300",
    secondary_background: "white",
    primary: "roman",
    text: "clover-600",
    title: "clover-700",
    primary_button: "btn btn-primary",
    hero_text: "hippie-500"
  },
  hero_right_content: "entrepreneur_video"
} %>

<%= render partial: "shared/navbar" %>


<header class="">
    <!-- hero-section  -->
  <%= render "pages/shared/hero_section_without_image", locales: locales %>
</header>

<main>
  <section>
    <div class="relative linear-background  pt-16 pb-20 px-4 sm:px-6 lg:pt-20 lg:pb-28 lg:px-8">
      <div class="absolute inset-0">
        <div class=" linear-background h-1/3 sm:h-2/3"></div>
      </div>
      <div class="relative max-w-7xl mx-auto">
        <div class="text-center">
          <h2 class="text-base font-semibold tracking-wider text-<%= locales[:colors][:primary]%>-500 uppercase">
            <%= t(".how.overtitle") %>
          </h2>
          <p class="text-3xl tracking-tight font-extrabold text-gray-900 sm:text-4xl">
            <%= t(".how.title") %>
          </p>
          <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
            <%= t(".how.description") %>
          </p>
        </div>
        <div class="mt-12 max-w-lg mx-auto grid gap-5 lg:grid-cols-3 lg:max-w-none">
          <% @workshops.each_with_index do |workshop, index| %>
          <div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
            <div class="flex-shrink-0">
              <img class="h-48 w-full object-cover" src="<%= workshop.image_url%>" alt="">
            </div>
            <div class="flex-1 bg-white p-6 flex flex-col justify-between">
              <div class="flex-1">
                <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-pink-100 text-pink-800">
                  <%= workshop.duration % 7 == 0 ? "1 journÃ©e" : "1/2 journÃ©e" %>
                </span>
                <%= link_to workshop_path(workshop), class:"block mt-2"  do %>
                  <p class="text-xl font-semibold text-gray-900">
                    <%= workshop.name %>
                  </p>
                  <p class="mt-3 text-base text-gray-500">
                    <%= workshop.body %>
                  </p>
                <% end %>
              </div>
              <div class="mt-6 flex items-center">
                <div class="flex-shrink-0">
                  <a href="#">
                    <span class="sr-only">Roel Aufderehar</span>
                      <% if workshop.user.avatar.attached? %>
                        <%= cl_image_tag workshop.user.avatar.key, class: "rounded-full h-10 w-10" %>
                      <% else %>
                        <img src="https://eu.ui-avatars.com/api/?rounded=true&name=<%= workshop.user.first_name  + workshop.user.last_name%>" class="rounded-full h-10 w-10">
                      <% end %>
                  </a>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">
                    <a href="#" class="hover:underline">
                      <%= workshop.user.full_name %>
                    </a>
                  </p>
                  <div class="flex space-x-1 text-sm text-gray-500">
                    <time datetime="2020-03-16">
                      Mar 16, 2020
                    </time>
                    <span aria-hidden="true">
                      &middot;
                    </span>
                    <span>
                      6 min read
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <%= render "pages/shared/cta", locales: locales %>

  <!-- pricing 2 -->
  <%= render "pages/shared/single_price", locales: locales %>
</main>
<%= render partial: "shared/footer" %>