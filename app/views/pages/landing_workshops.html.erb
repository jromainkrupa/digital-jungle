<% locales = { 
  path: "pages.landing_workshops",
  colors: {
    #logo_color: "red-500",
    primary_background: "goldish-300",
    secondary_background: "white",
    primary: "roman",
    text: "clover-600",
    title: "clover-700",
    primary_button: "btn btn-primary",
    hero_text: "hippie-500"
  },
  hero_right_content: "entrepreneur_video"
} %>



<header class="bg-goldish-300">
    <!-- hero-section  -->  
    <div class="lg:px-8 px-6">
      <%= render "shared/navbar", locales: locales %>
    </div>
  <%= render "pages/shared/hero_section_without_image", locales: locales %>
</header>

<main class="max-w-7xl mx-auto px-4 lg:px-8">
  <section class="pb-12">
    <div id="workshops" class="relative linear-background  pt-16 pb-20  lg:pt-20 lg:pb-28 ">
      <div class="absolute inset-0">
        <div class=" linear-background h-1/3 sm:h-2/3"></div>
      </div>
      <div  class="relative max-w-7xl mx-auto">
        <div class="text-center">
          <h2 class="text-base font-semibold tracking-wider text-<%= locales[:colors][:primary]%>-500 uppercase">
            <%= t(".how.overtitle") %>
          </h2>
          <p class="text-3xl tracking-tight font-extrabold text-gray-900 sm:text-4xl">
            <%= t(".how.title") %>
          </p>
          <p class="mt-3 max-w-4xl mx-auto text-xl text-gray-500 sm:mt-4">
            <%= t(".how.description") %>
          </p>
        </div>
        <div class="mt-12 max-w-lg mx-auto grid gap-5 lg:grid-cols-3 lg:max-w-none">
          <% @workshops.each_with_index do |workshop, index| %>
            <div class="mt-8">
              <%= render "workshops/card", { workshop: workshop, index: index} %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <%#= render "pages/shared/cta", locales: locales %>

  <!-- pricing 2 -->
  <%#= render "pages/shared/single_price", locales: locales %>
</main>
<%#= render partial: "shared/footer" %>