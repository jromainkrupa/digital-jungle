<div class="bg-clover-500">
  <!-- hero-section  -->
  <div class="pt-10 mx-auto max-w-7xl px-4 sm:pt-12 sm:px-6 lg:pt-16">
    <div class="lg:grid lg:grid-cols-12 lg:gap-8">
      <div data-controller="type" class="sm:text-center md:max-w-2xl md:mx-auto md:my-auto lg:col-span-6 lg:text-left">
        <h1 class="mt-1 block text-4xl text-white tracking-tight font-extrabold sm:text-5xl xl:text-6xl">
          <%= t(".hero-section.title_html") %>
        </h1>
        <p class="mt-3 text-base text-white sm:mt-5 sm:text-xl lg:text-lg xl:text-xl">
          <%= t(".hero-section.tagline") %>
        </p>
        <div class="mt-8 sm:max-w-lg sm:mx-auto sm:text-center lg:text-left lg:mx-0">
          <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
            <div class="">
              <%= link_to t(".hero-section.cta-primary"), new_user_registration_path, class: "btn btn-primary lg:mr-4 mr-0 lg:mb-0 mb-4" %>
            </div>
          </div>
        </div>
      </div>
      <div class="hidden sm:block relative sm:max-w-lg sm:mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-span-6 lg:flex md:items-center">
        <div class="relative mx-auto w-full rounded-lg lg:max-w-md">
          <%= render_svg "mountain",styles:"w-full" %>
        </div>
      </div>
    </div>
  </div>

  <div class="divider bg-clover-500">
    <%= render_svg "waves_divider" %>
  </div>

  <!-- press-logo  -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto pt-4 ">
      <h4 class="text-center my-8"><%= t(".press-logos.title") %></h4>
      <div class="logos logos--fill">
        <% 4.times do |i| %>
          <div class="">
            <%= image_tag t(".press-logos.logos-images.logo-#{i}"), class:"logos__logo" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- features  -->
<div class="relative bg-white pt-16 pb-8 overflow-hidden">

  <% 4.times do |i| %>
    <div class="relative <%= i == 0 ? "" : "mt-24" %>">
      <div class="lg:mx-auto lg:max-w-7xl lg:px-8 lg:grid lg:grid-cols-2 lg:grid-flow-col-dense lg:gap-24">
        <div class="px-4 max-w-xl mx-auto sm:px-6 lg:py-16 lg:max-w-none lg:mx-0 lg:px-0">
          <div>
            <div class="mt-6">
              <h2 class="text-3xl font-extrabold tracking-tight text-gray-900">
                <%= t(".features.feature-#{i}.header.title") %>
              </h2>
              <p class="mt-4 text-lg text-gray-500">
                <%= t(".features.feature-#{i}.header.description") %>
              </p>
            </div>
          </div>
            <!-- feeature's bullet-points  -->
            <div class="mt-8 border-t border-gray-200 pt-6">
              <dl class="mt-8 space-y-10">
                <% 3.times do |n| %>
                  <div class="relative">
                    <dt>
                      <div class="absolute flex items-center justify-center h-10 w-10 rounded-full bg-aquamarine-500 text-gray-800">
                        <%= render_svg t(".features.feature-#{i}.bullet-points.bullet-#{n}.svg") %>                  
                      </div>
                      <p class="ml-16 text-lg leading-6 font-medium text-gray-900">
                        <%= t(".features.feature-#{i}.bullet-points.bullet-#{n}.title") %>
                      </p>
                    </dt>
                    <dd class="mt-2 ml-16 text-base text-gray-500">
                      <%= t(".features.feature-#{i}.bullet-points.bullet-#{n}.description") %>
                    </dd>
                  </div>
                <% end %>
              </dl>
            </div>
        </div>

        <!-- feature's image  -->
        <% if i.even? %>
        <div class="mt-12 sm:mt-16 lg:mt-0">
          <div class="pl-4 -mr-48 sm:pl-6 md:-mr-16 lg:px-0 lg:m-0 lg:relative lg:h-full">
            <%= image_tag t(".features.feature-#{i}.mockup"),class:"w-full rounded-xl shadow-xl ring-1 ring-black ring-opacity-5 lg:absolute lg:left-0 lg:h-full lg:w-auto lg:max-w-none", alt:"lectures in idea on rails" %>
          </div>
        </div>
        <% else %>
        <div class="mt-12 sm:mt-16 lg:mt-0 lg:col-start-1">
          <div class="pr-4 -ml-48 sm:pr-6 md:-ml-16 lg:px-0 lg:m-0 lg:relative lg:h-full">
            <%= image_tag t(".features.feature-#{i}.mockup"),class:"w-full rounded-xl lg:absolute lg:right-0 lg:h-full lg:w-auto lg:max-w-none", alt:"todolist in idea on rails" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

